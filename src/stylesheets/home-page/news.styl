@import "../../stylesheets/_vars.styl"
.news-section
	margin-bottom: 2%
	.inner
		padding: 2% 0
		h4
			color: $dark-gray
			text-align: center
			margin-bottom: 2%
		.col-xs-12
			margin: 0 0 2% 0
			a
				text-decoration: none
			.card
				&:hover > .image-container > .image-overlay
					opacity: .6
				.image-container
					height: 100%
					width: 100%
					position: relative	
					img
						width: 100%
				.card-block
					background: $dark-blue
					padding: 2% 7%
					.card-text
						color: #fff
					.card-date
						color: $yellow
						font-size: 12px
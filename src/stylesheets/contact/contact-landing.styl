@import "../../stylesheets/_vars.styl"

#contact-landing
	.image-container
		margin: 2% auto
		background-size: cover
		background-position: center
		height: 18.5em
		width: 80%
		background-color: $dark-blue
	.more-info-section
				background: $dark-blue
				padding: 3% 3% 20% 3%
				width: 65%
				margin: 3% auto
				p
					color: #fff
				h5
					color: $light-blue
				.divider
					width: 100%
					height: 1px
					margin: 2% auto
					background: $yellow
				.connect
					a
						text-decoration: none
						display: block
						color: white
						margin-bottom: 2%
						div
							display: inline-flex
							margin-right: 1%
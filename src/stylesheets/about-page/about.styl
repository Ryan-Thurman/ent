@import "../../stylesheets/_vars.styl"

h3
	color: $dark-gray
	text-align: center
#top
	text-align: center
	padding: 3% 15%
	.col-xs-12
		margin-bottom: 1%
	button
		margin-top: 2.5%
#our-team
	background-color: $light-gray
	padding: 0 5% 4% 5%
	a
		text-decoration: none
	h3
		margin: 3% auto
	.card
		margin: 2% auto
		width: 200px
		&:hover > .image-container > .image-overlay
			opacity: .7
		&:hover > .image-container > .image-overlay > .text-holder > .bio-click
			opacity: 1
		.image-container
			height: 100%
			width: 100%
			position: relative	
			img
				width: 100%
			.image-overlay
				.text-holder
					margin: 0 auto
					height: 5em
					position: relative
					top: 50%
					transform: perspective(1px) translateY(-50%)
					text-align: center
					.bio-click
						font-family: "Nudista-bold", sans-serif
						font-size: 24px
						color: #fff
						opacity: 0
						width: 100%
						position: relative
						top: 50%
						transform: perspective(1px) translateY(-50%)
		.card-block
			background-color: $dark-blue
			color: #fff
			padding: 3% 0
			.card-text
				font-size 22px
			.card-title
				font-size: 14px
				opacity: .6
#summary-content
	padding: 5% 15%
	img
		width: 100%
		margin-bottom: 2%
	p
		opacity: .6
		font-size: 14px
#quote-section
	background: $light-gray
	padding: 2% 15%
	h2
		margin-bottom: 2%
@import "../../stylesheets/_vars.styl"

.sidebar-top
	background-color: $dark-blue
	color: #fff
	text-align: left
	padding: 2% 5% 6% 5%
	width: 75%
	margin: 8% auto 5% auto
	.divider
		width: 100%
		height: 1px
		margin: 2% auto
		background: $yellow
	h5
		color: $light-blue
		font-size: 18px
	.more-about, .cast-crew
		p
			font-size: 18px
			font-family: "Nudista-bold"
	.watch-online
		.divider
			margin: 6% auto
	.connect
		a
			text-decoration: none
			display: block
			color: white
			margin-bottom: 2%
			div
				display: inline-flex
				margin-right: 1%

.sidebar-bottom
	h3
		color: $dark-gray
		margin: 3% 0
	a
		text-decoration: none
		.card
			width: 75%
			margin: 0 auto 8% auto
			&:hover > .image-container > .image-overlay
				opacity: .6
			.image-container
				height: 100%
				width: 100%
				position: relative	
				img
					width: 100%
			.card-block
				background: $dark-blue
				padding: 2% 7%
				.card-text
					color: #fff
				.card-date
					color: $yellow
					font-size: 12px
@import "../../stylesheets/_vars.styl"

.topImage
	img
		width: 100%
#project-content-section
	h5
		text-align: left
		color: $light-blue
		font-size: 16px
	h2
		margin: 1.5% auto
		p
			opacity: .8
			color: $dark-gray
	.project-top
		margin: 1.5% auto
		h4
			display: inline-block
		.category-info
			.project-categories
				display: inline-block
				margin: 0 5% 0 0
				height: 100%
				float: right
				@media (max-width:991px)
					float: left
				div
					display: inline-block
					p
						color: $light-blue
						
			.project-categories-icons
				display: inline-block
				height: 100%
	.project-side
		width: 65%
		margin: 0 auto
		@media (max-width:991px)
			margin: 2% 0
		.more-info-section
			background: $dark-blue
			padding: 4% 7%
			.divider
				width: 100%
				height: 1px
				margin: 2% auto
				background: $yellow
			.connect
				a
					text-decoration: none
					display: block
					color: white
					margin-bottom: 2%
					div
						display: inline-flex
						margin-right: 1%
			.cast
				p
					display: inline-block
					font-size: 13px
					color: #fff
.no-padding
	.project-back-button
		width: 100%
		background: $light-blue
		padding 2% 0
		div
			position: relative
			width: 25%
			margin 0 auto
			text-align: center
			&:hover
				a
					left: 0
				span
					opacity: 1
			a
				text-decoration: none
				color: #fff
				font-size: 16px
				position: relative
				left: 5px
				-webkit-transition: left .3s ease-in-out
				transition: left .3s ease-in-out
			span
				color: #fff
				margin: 1% 0 0 1%
				opacity: 0
				-webkit-transition: opacity 0.3s ease-in-out
				-moz-transition: opacity 0.3s ease-in-out
				-o-transition: opacity 0.3s ease-in-out
				transition: opacity 0.3s ease-in-out

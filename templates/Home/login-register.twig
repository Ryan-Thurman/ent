<!-- Login modal -->

<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="LoginModalLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title"></h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
			</div>
			<div class="modal-body">

				<div class="center" id="login-header">
					<h2>LOG IN</h2>
					<span>to your account</span>
				</div>

				<form id="login" action="login" method="post" class="form">
					<p class="status"></p>
					<div class="form-group">
						<input class="form-control" id="username" type="text" name="username" placeholder="Username">
					</div>
					<div class="form-group">
						<input class="form-control" id="password" type="password" name="password" placeholder="Password">
					</div>
					<div class="form-group center">
						<input class="btn btn-yellow submit_button" type="submit" value="LOGIN" name="submit">
					</div>
					{{ function ('wp_nonce_field', 'ajax-register-nonce', 'idwe_login_security') }}
				</form>
			</div>
			<div class="modal-footer">
				<div class="center">
					<p id="or-header">or</p>
					<button type="button" class="btn btn-db" data-toggle="modal" data-target="#RegModal" data-dismiss="modal">
  				REGISTER
				</button>
				</div>
			</div>
		</div>
	</div>
</div>

<!-- Register Modal -->

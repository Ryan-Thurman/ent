<script>
	require('javascript/swiper-init.js')
</script>

{% block sliders %}

<div class="container-fluid" id="carousel-container">
	<div class="swiper-container" data-spv='1'>
		<div class="swiper-wrapper">
			<!-- Slides -->
			{% for slider in sliders %}
			<div class="swiper-slide">
				<div class="image-container">
					<img src="http://via.placeholder.com/1000x350'" alt="">
				</div>
				<div class="carousel-caption">
					<p> {{slider.title}} </p>
					<div>
						<a href="{{slider.get_field('learn_more')}}" class='btn btn-lb'> LEARN MORE </a>
					</div>
				</div>
			</div>
			{% endfor %}
		</div>
		<!-- If we need pagination -->
		<div class="swiper-pagination"></div>
	</div>
	<!-- end of swiper-container -->
</div>

{% endblock %}
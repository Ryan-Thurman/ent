<div class="container-fluid" id="cf-home">
	<div class='title-section'>
		<h3>CONTACT US</h3>
		<p>Have a question? Get in touch with us here.</p>
	</div>
	<div class="container inner">
		<div class="row">
			<form>
				<div class="col-xs-12">
					<div class="row">
						<div class="col-xs-12 col-md-6">
							<div class="form-group">
								<label for="name">Name</label>
								<input type="text" class="form-control" id="name">
							</div>
						</div>
						<div class="col-xs-12 col-md-6">
							<div class="form-group">
								<label for="email">Email</label>
								<input type="email" class="form-control" id="email">
							</div>
						</div>
					</div>
				</div>
				<div class="col-xs-12">
					<div class="row">
						<div class="col-xs-12 col-md-6">
							<div class="form-group">
								<label for="phone">Phone Number</label>
								<input type="text" class="form-control" id="phone">
							</div>
						</div>
						<div class="col-xs-12 col-md-6">
							<div class="form-group">
								<label for="company">Company/Organization</label>
								<input type="text" class="form-control" id="company">
							</div>
						</div>
					</div>
				</div>
				<div class="col-xs-12">
					<div class="form-group">
						<label for="message">What can we do for you?</label>
						<textarea class="form-control" id="message"></textarea>
					</div>
				</div>
				<div class="col-xs-12">
					<div style='text-align: center; margin: 3% 0;'>
						<button type="submit" class="btn btn-db">Submit</button>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>
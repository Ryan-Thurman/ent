{% extends "base.twig" %} {% block content %}
<div class="container single-news-section">
	<div class="row">
		<div class="col-xs-12 col-md-7">
			<div class="row">
				<div class="col-xs-12">
					<div class="content-wrapper">
						<article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
							<section class="article-content">
								<h1 class="article-h1">{{ post.title }}</h1>
								<div class="image-container-article">
									<img src="{{post.thumbnail}}" alt="">
								</div>

								<p class="blog-author">
									<p> {{ post.date }} </p>
								</p>
								<div class="article-body">

									<p>{{post.content}}</p>
								</div>

							</section>
						</article>
					</div>
					<!-- /content-wrapper -->
				</div>
			</div>
			<!-- article row end -->
			<div class="row recent-posts-single hidden-sm hidden-xs">
				<div class="col-xs-12">
					<h3>RECENT POSTS </h3>
				</div>
				<div class="row">

					{% for post in recent %}
					<div class="col-xs-12 col-md-6">
						{% include 'news-loop.twig' %}
					</div>
					{% endfor %}
				</div>
			</div>
		</div>
		<!-- col-md-7 -->
		<div class="col-xs-12 col-md-5 center">
			{{sidebar}}
		</div>
	</div>

	<div class="col-xs-12 col-md-7 mobile-recent">
		<div class="row recent-posts-single hidden-md hidden-lg">
			<div class="col-xs-12">
				<h3>RECENT POSTS </h3>
			</div>

			{% for post in recent %}
			<div class="col-xs-12">
				<div class="outer-card-div">
					{% include 'news-loop.twig' %}
				</div>
			</div>
			{% endfor %}
		</div>
	</div>
</div>
</div>
</div>

{% endblock %}